{% extends 'base.html.twig' %}

{% block title %}Liste des Employ√©s{% endblock %}
{% block body_class %}after-login{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid #333;
      padding: 8px;
    }
    th {
      background-color: #eee;
    }
    .btn-import, .btn-add {
      padding: 8px 14px;
      border-radius: 4px;
      text-decoration: none;
      color: white;
      font-weight: 600;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      user-select: none;
      transition: background-color 0.2s ease;
      border: none;
    }
    .btn-import {
      background-color: #17a2b8;
    }
    .btn-import:hover {
      background-color: #117a8b;
    }
    .btn-add {
      background-color: #28a745;
    }
    .btn-add:hover {
      background-color: #1e7e34;
    }
    .btn-yellow {
      background-color: #ffc107;
      color: #212529;
      padding: 6px 12px;
      border-radius: 4px;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s ease;
    }
    .btn-yellow:hover {
      background-color: #d39e00;
    }
    .btn-red {
      background-color: #dc3545;
      color: white;
      padding: 6px 12px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .btn-red:hover {
      background-color: #bd2130;
    }
    .btn-red:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
    .action-bar {
      position: relative;
      margin-bottom: 40px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .import-form {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .back-link {
      background-color: #6c757d;
      color: white;
      padding: 8px 14px;
      border-radius: 4px;
      text-decoration: none;
      user-select: none;
      transition: background-color 0.2s ease;
    }
    .back-link:hover {
      background-color: #5a6268;
    }
  </style>
{% endblock %}

{% block body %}

<header>
  <div class="user-info">
    <strong>{{ app.session.get('user_nom') }}</strong><br>
    <small>{{ app.session.get('user_role') }}</small>
  </div>
  <nav class="nav-links">
    <a href="{{ path('app_entreprises') }}" class="btn blue">üè¢ Liste des entreprises</a>
    <a href="{{ path('app_mailing') }}" class="btn blue">üìß Mailing</a>
    <a href="{{ path('app_monespace') }}" class="btn blue">üë§ Mon espace</a>
    <a href="{{ path('app_logout') }}" class="btn red">üö™ D√©connexion</a>
  </nav>
</header>

<h1>
  {% if entreprise is defined %}
    Employ√©s de l'entreprise : {{ entreprise.nom }}
  {% else %}
    Tous les employ√©s
  {% endif %}
</h1>

{% if entreprise is defined %}
  <div class="action-bar">
    <a href="{{ path('app_entreprises') }}" class="back-link">‚Üê Retour aux entreprises</a>

    <form action="{{ path('app_importer_employes', { entreprise_id: entreprise.id }) }}" method="post" enctype="multipart/form-data" class="import-form">
      <label for="excel_file" style="margin: 0; font-weight: 600;">Importer un fichier Excel :</label>
      <input type="file" name="excel_file" id="excel_file" accept=".xlsx" required>
      <button type="submit" class="btn-import">üìÇ Importer</button>
    </form>

    <a href="{{ path('app_ajouter_employe', { entreprise_id: entreprise.id }) }}" class="btn-add">‚ûï Ajouter un employ√©</a>
  </div>
{% endif %}

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>
      <th>Email</th>
      <th>Modifier</th>
      <th>Supprimer</th>
    </tr>
  </thead>
  <tbody>
    {% for employe in employes %}
      <tr>
        <td>{{ employe.id }}</td>
        <td>{{ employe.nom }}</td>
        <td>{{ employe.email }}</td>
        <td>
          <a href="{{ path('app_modifier_employe', { id: employe.id }) }}" class="btn-yellow">‚úèÔ∏è Modifier</a>
        </td>
        <td>
          <form method="post" action="{{ path('app_supprimer_employe', { id: employe.id }) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet employ√© ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employe.id) }}">
            <button type="submit" class="btn-red">üóë Supprimer</button>
          </form>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="5" class="text-center">Aucun employ√© trouv√©.</td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
